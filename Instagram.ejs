<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= username %>'s Profile</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      background-color: #fafafa;
    }

    .profile-header {
      display: flex;
      align-items: center;
      padding: 20px;
      border-bottom: 1px solid #dbdbdb;
      background-color: #fff;
    }

    .profile-pic {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background-color: #ccc;
      margin-right: 20px;
    }

    .profile-info {
      display: flex;
      flex-direction: column;
    }

    .profile-info h2 {
      margin: 0;
      font-size: 24px;
      font-weight: 600;
    }

    .action-buttons {
      margin-top: 10px;
    }

    .action-buttons button {
      margin-right: 10px;
      padding: 8px 16px;
      font-weight: 500;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-follow {
      background-color: #0095f6;
      color: white;
    }

    .btn-message {
      background-color: #efefef;
    }

    .reels-section {
      padding: 20px;
    }

    .reels-form {
      display: flex;
      flex-direction: column;
      margin-bottom: 30px;
    }

    .reels-form input,
    .reels-form textarea {
      padding: 10px;
      margin-bottom: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .reels-form button {
      width: 120px;
      padding: 10px;
      font-weight: bold;
      background-color: #0095f6;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .reel {
      border: 1px solid #dbdbdb;
      border-radius: 8px;
      padding: 15px;
      background-color: white;
      margin-bottom: 20px;
    }

    .reel h4 {
      margin: 0 0 5px 0;
    }

    .reel p {
      margin: 0;
    }
  </style>
</head>
<body>

  <!-- Profile Header -->
  <div class="profile-header">
    <div class="profile-pic"></div>
    <div class="profile-info">
      <h2><%= username %></h2>
      <div class="action-buttons">
        <button class="btn-follow">Follow</button>
        <button class="btn-message">Message</button>
      </div>
    </div>
  </div>

  <!-- Reels Section -->
  <div class="reels-section">
    <h3>Post a Reel</h3>
    <form action="/reels" method="POST">
  <input type="hidden" name="username" value="<%= username %>" />
  <input type="text" name="title" placeholder="Reel Title" required />
  <input type="text" name="description" placeholder="Reel Description" required />
  <button type="submit">Post Reel</button>
</form>

    <h3>Reels</h3>
    <% reels.forEach(reel => { %>
      <div class="reel">
        <h4><%= reel.title %></h4>
        <p><%= reel.description %></p>
      </div>
    <% }) %>
  </div>

</body>
</html>
